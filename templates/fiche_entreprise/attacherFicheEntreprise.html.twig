{% extends 'base.html.twig' %}

{% block title %}Se rattacher a une fiche entreprise{% endblock %}
{% block body %}
    <div class="container mt-4">
        <h1>Liste des entreprises</h1>

        <table id="entrepriseTable" class="table table-striped">
            <thead>
            <tr>
                <th>Nom de l'entreprise</th>
                <th>Adresse</th>
                <th>Adresse web</th>
            </tr>
            </thead>
            <tbody>
            {% for entreprise in entreprises %}
                <tr>
                    <td>{{ entreprise.nomEntreprise }}</td>
                    <td>{{ entreprise.rue }} {{ entreprise.ville }} {{ entreprise.cp }} </td>
                    <td>{{ entreprise.adresseWeb }}</td>
                        <td>
                            <a href="{{path('rattacherUserFicheEnt', {id:entreprise.id}) }}" class="btn btn-primary btn-sm">Se rattacher</a>
                        </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Script pour initialiser DataTables -->
    <script>
        $(document).ready(function() {
            $('#entrepriseTable').DataTable();
        });
    </script>
{% endblock %}