{% extends 'base.html.twig' %}

{% block title "Fiche Entreprise : "~ ficheEntreprise.nomEntreprise %}

{% block body %}
    <h1>{{ ficheEntreprise.nomEntreprise }}</h1>
    <div class="form-container">
        {{ form_start(form, {'attr': {'class': 'my-form-class'}}) }}

        <div class="mb-3">
            {{ form_label(form.nom_entreprise, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom_entreprise) }}
            {{ form_errors(form.nom_entreprise) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.rue, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.rue) }}
            {{ form_errors(form.rue) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.cp, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.cp) }}
            {{ form_errors(form.cp) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.ville, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.ville) }}
            {{ form_errors(form.ville) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.adresse_web, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.adresse_web) }}
            {{ form_errors(form.adresse_web) }}
        </div>

        <div>
            {{ form_widget(form.Save) }}
        </div>
        <div>
            <a class="btn btn-primary" href="{{ path('profilEntreprise') }}">Retour</a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}