{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="wrapper wrapper-content animated fadeInRight">

                    <div class="ibox-content m-b-sm border-bottom">
                        <div class="p-xs">
                            <div class="pull-left m-r-md">
                                <i class="fa fa-globe text-navy mid-icon"></i>
                            </div>
                            <h2>Bienvenue sur le forum</h2>
                            {% if app.user is null %}
                            <a href="{{ path('app_login') }}" class="btn btn-info">Je pose ma question</a>
                            {% else %}
                            <a href="{{ path('createPost') }}" class="btn btn-info">Je pose ma question</a>
                            {% endif %}
                        </div>
                    </div>

                    <div class="ibox-content forum-container">

                        <div class="forum-title">
                            <div class="pull-right forum-desc">
                                <samll>Total posts: </samll>
                            </div>
                            <h3>Toutes les questions du forum</h3>
                        </div>
                        {% for question in questions %}

                        <div class="forum-item active">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="forum-icon">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                    <h4>{{ question.titre }}</h4>
                                    <div class="forum-sub-title">{{ question.contenue }}</div>
                                </div>
                                <div class="col-md-1 forum-info">
                                    <div>
                                        <small>{{ question.date ? question.date|date('Y-m-d') : '' }}</small>
                                    </div>
                                </div>
                                <div class="col-md-1 forum-info">
                                    <div>
                                        <small>{{ question.refuser.nom }} {{ question.refuser.prenom }}</small>
                                    </div>
                                </div>
                                <div class="col-md-1 forum-info">
                                    <div>
                                        <a href="{{ path("app_reponse",{id: question.id })}}" class="btn btn-info">repondre</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}