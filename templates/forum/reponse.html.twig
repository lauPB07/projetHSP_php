{% extends 'base.html.twig' %}

{% block title %}Repondre a la question{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="wrapper wrapper-content animated fadeInRight">

                    <div class="ibox-content m-b-sm border-bottom">
                        <div class="p-xs">
                            <div class="pull-left m-r-md">
                                <i class="fa fa-globe text-navy mid-icon"></i>
                            </div>
                            {% for post in posts %}
                                <h2>{{ post.titre }}</h2>
                                <h4>{{ post.contenue }}</h4>
                                <a href="{{ path('app_createReponse',{id:post.id} )}}" class="btn btn-info">Je repond </a>
                                <a href="{{ path('app_forum') }}" class="btn btn-info">retour</a>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="ibox-content forum-container">

                        <div class="forum-title">
                            <div class="pull-right forum-desc">
                                <samll>Total posts: </samll>
                            </div>
                            <h3>Toutes les r√©ponses a la questions</h3>
                        </div>
                        {% for reponse in reponses %}

                            <div class="forum-item active">
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="forum-icon">
                                            <i class="fa fa-question-circle"></i>
                                        </div>
                                        {% if reponse is null %}
                                            <h4>Aucune reponse de dispo</h4>
                                        {% else %}
                                            <h4>{{ reponse.contenue }}</h4>
                                        {% endif %}
                                    </div>
                                    <div class="col-md-1 forum-info">
                                        <div>
                                            <small>{{ reponse.date ? reponse.date|date('Y-m-d') : '' }}</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}