{% extends 'base.html.twig' %}

{% block title %}Evenements{% endblock %}

{% block body %}
<a href="{{ path('createEvent') }}" class="btn btn-info">Créer un évenement</a>
    <div class="container mt-4">
        <h1>Liste des événements</h1>

        <table id="eventsTable" class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date</th>
                <th>Nombre de places</th>
                <th> Participez a l'event</th>
                <th> Desinscription a l'event</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.type }}</td>
                    <td>{{ event.titre }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
                    <td>{{ event.nbPlace }}</td>
                    <td>
                        <form action="{{ path('participeEvent', {id:event.id}) }}" method="post">
                            <input type="hidden" name="_method" value="PARTICIPER">
                            <button type="submit" class="btn btn-success" >participer</button>
                        </form>
                    </td><td>
                        <form action="{{ path('desincriptionEvent', {id:event.id}) }}" method="post">
                            <input type="hidden" name="_method" value="PARTICIPER">
                            <button type="submit" class="btn btn-danger" >desinscription</button>
                        </form>
                    </td>



                    {% set userInEvent = false %}
                    {% for user in event.users %}
                        {% if user.id == app.user.id %}
                            {% set userInEvent = true %}
                        {% endif %}
                    {% endfor %}

                    {% if userInEvent %}
                        <td>
                            <a href="{{path('editEvent', {id:event.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            <form action="{{ path('deleteEvent', {id:event.id}) }}" method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger" >Supprimer</button>
                            </form>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Script pour initialiser DataTables -->
    <script>
        $(document).ready(function() {
            $('#eventsTable').DataTable();
        });
    </script>
{% endblock %}
